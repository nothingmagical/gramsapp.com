source 'https://rubygems.org'

# Latest Ruby
ruby '2.0.0'

# Web server
gem 'unicorn'

# Simple HTTP
gem 'sinatra'

# Faster ERB
gem 'erubis'

# Asset pipeline
gem 'sprockets'
gem 'sprockets-helpers'

# Use the right host
gem 'rack-canonical-host'

# Stylesheet
gem 'sass'
gem 'sprockets-sass'
gem 'grater'
gem 'bourbon'

group :development do
  # Reloading in development
  gem 'shotgun'
end
